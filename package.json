{
  "name": "w-kosher-website-improvement",
  "version": "1.0.0",
  "description": "WordPress website improvement project for w-kosher.com - fixing mobile responsiveness and optimizing secondary pages",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npx serve public -p 3000",
    "admin": "npx serve admin -p 3003",
    "deploy": "bash admin/deploy.sh",
    "build": "node scripts/build.js",
    "build:images": "node scripts/optimize-images.js",
    "build:css": "sass src/scss:dist/css --no-source-map",
    "build:js": "webpack --mode=production",
    "lint": "eslint src/js/**/*.js",
    "test": "jest",
    "analyze": "lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse.html",
    "preview": "npx serve dist -p 3001"
  },
  "keywords": [
    "wordpress",
    "responsive-design",
    "mobile-optimization",
    "kosher-certification",
    "website-improvement"
  ],
  "author": "Web Development Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "babel-loader": "^9.1.3",
    "clean-css-cli": "^5.6.3",
    "eslint": "^8.55.0",
    "html-minifier-terser": "^7.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lighthouse": "^11.4.0",
    "sass": "^1.69.5",
    "serve": "^14.2.5",
    "sharp": "^0.34.5",
    "terser": "^5.46.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "jquery": "^3.7.1"
  }
}
